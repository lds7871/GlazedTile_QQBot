# Spring Boot 应用配置示例文件
# 复制本文件为 application.yml 并根据实际环境修改配置

spring:
  application:
    name: Auto_Scheduled_Task
  config:
    import: classpath:config.properties
  session:
    store-type: memory
    timeout: 1800  # 30 分钟
    cookie:
      http-only: true
      max-age: 1800 
      name: JSESSIONID
      path: /
      secure: false
  datasource:
    # MySQL 数据库连接 URL
    url: jdbc:mysql://YOUR_DB_HOST:3306/YOUR_DB_NAME?useUnicode=true&characterEncoding=utf-8&serverTimezone=Asia/Shanghai&allowPublicKeyRetrieval=true&useSSL=false
    # 数据库用户名
    username: YOUR_DB_USERNAME
    # 数据库密码
    password: YOUR_DB_PASSWORD
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: none
    generate-ddl: false
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.MySQL8Dialect
        format_sql: true
  sql:
    init:
      mode: never

# # CORS 跨域配置（可选）
